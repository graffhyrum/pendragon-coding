---
import type { CardVariant } from '../../types/Card';

interface Props {
	variant?: CardVariant;
	maxWidth?: string;
	minWidth?: string;
	className?: string;
	[key: string]: unknown;
}

const {
	variant = 'short-form',
	maxWidth = '',
	minWidth = '',
	className = '',
	...rest
} = Astro.props;

const baseClasses = [
	// Base styles
	'outline-solid outline-2 outline-green-700',
	'w-full m-4 p-2 rounded-lg',

	// Transitions
	'transition-all duration-300',

	// Interactive states
	'hover:outline-green-500 hover:shadow-lg hover:shadow-green-900/50',
	'hover:-translate-y-1 hover:scale-[1.02]',
	'focus-within:outline-green-500 focus-within:shadow-lg focus-within:shadow-green-900/50',
	'focus-within:-translate-y-1 focus-within:scale-[1.02]',
].join(' ');

const sizeStyle =
	variant === 'long-form'
		? `max-width: 100%; ${minWidth ? `min-width: ${minWidth};` : ''}`
		: `min-width: 360px; max-width: 20vw; ${minWidth ? `min-width: ${minWidth};` : ''}`;
---
<li
	class={`${baseClasses} ${maxWidth} ${className}`}
	style={sizeStyle}
	{...rest}
>
	<slot/>
</li>