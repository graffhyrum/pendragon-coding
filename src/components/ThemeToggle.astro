---
// Theme Toggle Component - Sliding toggle for light/dark mode
---

<button
	id="theme-toggle"
	type="button"
	class="relative inline-flex h-8 w-16 items-center rounded-full bg-gray-300 dark:bg-gray-600 transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-2 focus:ring-offset-green-950 dark:focus:ring-offset-gray-900"
	role="switch"
	aria-checked="false"
	aria-label="Toggle dark mode"
>
	<span
		id="toggle-slider"
		class="inline-block h-6 w-6 transform rounded-full bg-white transition-transform duration-300 translate-x-1 dark:translate-x-9 shadow-lg"
	>
		<svg
			id="sun-icon"
			class="h-6 w-6 text-yellow-500 dark:opacity-0 transition-opacity duration-300"
			fill="currentColor"
			viewBox="0 0 24 24"
		>
			<path d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z" />
		</svg>
		<svg
			id="moon-icon"
			class="h-6 w-6 text-gray-700 opacity-0 dark:opacity-100 transition-opacity duration-300 absolute top-0 left-0"
			fill="currentColor"
			viewBox="0 0 24 24"
		>
			<path fill-rule="evenodd" d="M9.528 1.718a.75.75 0 01.162.819A8.97 8.97 0 009 6a9 9 0 009 9 8.97 8.97 0 003.463-.69.75.75 0 01.981.98 10.503 10.503 0 01-9.694 6.46c-5.799 0-10.5-4.701-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 01.818.162z" clip-rule="evenodd" />
		</svg>
	</span>
</button>

<script is:inline>
	// Set up theme toggle functionality
	function setupThemeToggle() {
		const button = document.getElementById('theme-toggle');
		if (!button) return;

		// Update button state based on current theme
		const isDark = document.documentElement.classList.contains('dark');
		button.setAttribute('aria-checked', isDark ? 'true' : 'false');

		// Remove any existing listeners to avoid duplicates
		const newButton = button.cloneNode(true);
		button.parentNode?.replaceChild(newButton, button);

		// Add click handler
		newButton.addEventListener('click', function() {
			const element = document.documentElement;
			element.classList.toggle('dark');

			const nowDark = element.classList.contains('dark');
			localStorage.setItem('theme', nowDark ? 'dark' : 'light');

			// Update aria-checked attribute
			this.setAttribute('aria-checked', nowDark ? 'true' : 'false');
		});
	}

	// Set up toggle on initial load
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', setupThemeToggle);
	} else {
		setupThemeToggle();
	}

	// Re-initialize after HTMX swaps (in case header is replaced)
	document.body.addEventListener('htmx:afterSwap', setupThemeToggle);
</script>
