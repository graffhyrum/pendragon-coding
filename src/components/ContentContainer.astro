---
import type { ContentTemplate } from '../types/ContentTemplate';
import ContentCard from './content/ContentCard.astro';
import ContentSection from './content/ContentSection.astro';

interface Props {
	containerContent: ContentTemplate;
}

const { containerContent } = Astro.props;
---

{containerContent.sections.map((section) => {
	const layoutMode = section.layoutMode || 'grid';

	return (
		<ContentSection
			title={section.title}
			subtitle={section.subtitle}
			layoutMode={layoutMode}
		>
			{section.content.map((contentItem) => (
				<ContentCard
					title={contentItem.title}
					links={contentItem.link}
					description={contentItem.description}
					layoutMode={layoutMode}
				/>
			))}
		</ContentSection>
	);
})}
