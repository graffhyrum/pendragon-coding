---
import Card from './Card.astro';

const { entry } = Astro.props;
const { Content } = await entry.render();
---
<Card variant="long-form" maxWidth="max-w-max">
    <article id={frontmatter.title.replace(/ /g, '-')}>
        <h3 class="text-2xl font-medium text-green-100 mt-4">{frontmatter.title}</h3>
        <p class="text-sm text-green-400 my-2">{frontmatter.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}</p>
        <div class="content bullet-list">
            <Content />
        </div>
    </article>
</Card>
