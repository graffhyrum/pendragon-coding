---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Testimonials';
const allTestimonials = await Astro.glob('./testimonials/*.md');
---

<BaseLayout pageTitle={pageTitle}>
    <h2>{pageTitle}</h2>
    <div class="text-xl">
        <p>
            This is a collection of testimonials from people that I have worked with.
        </p>
        <ul class="flex flex-wrap max-w-max" role="list">
            {allTestimonials.map(({frontmatter, Content}) => (
                    <li class="outline-solid outline-2 outline-green-700 w-full max-w-lg m-4 p-2 rounded-lg">
                        <article id={frontmatter.title}>
                            <Content />
                        </article>
                    </li>
            ))}
        </ul>
    </div>

</BaseLayout>
