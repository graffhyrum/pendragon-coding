---
import Card from '../components/Card.astro';
import CollectionPageLayout from '../layouts/CollectionPageLayout.astro';

const pageTitle = 'Testimonials';
const allTestimonials = Object.values(import.meta.glob('./testimonials/*.md', { eager: true })) as any[];
---

<CollectionPageLayout
	pageTitle={pageTitle}
	description="This is a collection of testimonials from people that I have worked with."
	layoutMode="single-column"
>
	{allTestimonials.map(({frontmatter, Content}) => (
		<Card variant="long-form">
			<article id={frontmatter.title}>
				<Content />
			</article>
		</Card>
	))}
</CollectionPageLayout>
